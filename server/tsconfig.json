{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}